{
    "owner": {
        "properties": {
            "element": {"#": "component"}
        }
    },

    "repetition": {
        "prototype": "ui/repetition.reel",
        "properties": {
            "element": {"#": "repetition"},
            "switchPath": "'admin'",
            "content": [{"name": "John"}, {"name": "Mary"}]
        }
    },

    "admin": {
        "prototype": "ui/text.reel",
        "properties": {
            "element": {"#": "admin"}
        },
        "bindings": {
            "value": {"<-": "@repetition.objectAtCurrentIteration.name"}
        }
    },

    "user": {
        "prototype": "ui/text.reel",
        "properties": {
            "element": {"#": "user"}
        },
        "bindings": {
            "value": {"<-": "@repetition.objectAtCurrentIteration.name"}
        }
    }
}
