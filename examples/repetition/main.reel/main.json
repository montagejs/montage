{
    "owner": {
        "properties": {
            "element": {"#": "component"}
        }
    },
    
    "repetition": {
        "prototype": "ui/repetition.reel",
        "properties": {
            "element": {"#": "repetition"},
            "switchPath": "'user'",
            "content": [
                {"type": "admin", "name": "An Admin"},
                {"type": "user", "name": "A User"}
            ]
        }
    },

    "user": {
        "prototype": "ui/text.reel",
        "properties": {
            "element": {"#": "user"},
            "value": "user"
        }
    },

    "admin": {
        "prototype": "ui/text.reel",
        "properties": {
            "element": {"#": "admin"}
        },
        "bindings": {
            "value": {"<-": "@repetition.content.some{type=='admin'}.name"}
        }
    }
}
