{
    "converter": {
        "prototype": "temp-converter"
    },

    "celsiusTextfield": {
        "prototype": "montage/ui/textfield.reel",
        "properties": {
            "element": {"#": "celsius"}
        },
        "bindings": {
            "value": {
                "boundObject": {"@": "fahrenheitTextfield"},
                "boundObjectPropertyPath": "value",
                "converter": {"@": "converter"}
            }
        }
    },

    "fahrenheitTextfield": {
        "prototype": "montage/ui/textfield.reel",
        "properties": {
            "element": {"#": "fahrenheit"},
            "value": "32"
        }
    },
    
    "barometer": {
        "prototype": "montage/ui/range-input.reel",
        "properties": {
            "element": {"#": "barometer"}
        },
        "bindings": {
            "value": {
                "boundObject": {"@": "fahrenheitTextfield"},
                "boundObjectPropertyPath": "value"
            }
        }
    }
}
