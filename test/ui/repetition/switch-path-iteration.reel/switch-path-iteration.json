{
    "owner": {
        "properties": {
            "element": {"#": "component"}
        }
    },

    "repetition": {
        "prototype": "montage/ui/repetition.reel",
        "properties": {
            "element": {"#": "repetition"},
            "switchPath": "objectAtCurrentIteration.isAdmin ? 'admin' : 'user'",
            "content": [
                {"name": "John"},
                {"name": "Mary"}
            ]
        }
    },

    "admin": {
        "prototype": "montage/ui/text.reel",
        "properties": {
            "element": {"#": "admin"},
            "isAdmin": true
        },
        "bindings": {
            "value": {"<-": "@repetition.objectAtCurrentIteration.name"}
        }
    },

    "user": {
        "prototype": "montage/ui/text.reel",
        "properties": {
            "element": {"#": "user"},
            "isAdmin": false
        },
        "bindings": {
            "value": {"<-": "@repetition.objectAtCurrentIteration.name"}
        }
    }
}
