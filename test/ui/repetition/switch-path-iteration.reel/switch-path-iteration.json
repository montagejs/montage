{
    "owner": {
        "properties": {
            "element": {"#": "component"}
        }
    },

    "repetition": {
        "prototype": "montage/ui/repetition.reel",
        "properties": {
            "element": {"#": "repetition"},
            "switchPath": "@owner.isEven() ? 'admin' : 'user'",
            "content": [
                {"name": "John"},
                {"name": "Mary"}
            ]
        }
    },

    "admin": {
        "prototype": "montage/ui/text.reel",
        "properties": {
            "element": {"#": "admin"}
        },
        "bindings": {
            "value": {"<-": "@repetition.objectAtCurrentIteration.name"}
        }
    },

    "user": {
        "prototype": "montage/ui/text.reel",
        "properties": {
            "element": {"#": "user"}
        },
        "bindings": {
            "value": {"<-": "@repetition.objectAtCurrentIteration.name"}
        }
    }
}
